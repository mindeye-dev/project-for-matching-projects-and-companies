# Backend Environment Variables
# Configuration for Flask backend application
# Copy this file to .env and fill in your actual values

# Database Configuration
# For SQLite (development):
SQLALCHEMY_DATABASE_URI=sqlite:///app.db
# For PostgreSQL (production):
# SQLALCHEMY_DATABASE_URI=postgresql://user:password@localhost:5432/mydb

# JWT Secret Key (change this to a secure random string)
JWT_SECRET_KEY=your-secret-key-change-this-in-production

# OpenAI API Key (required for chatbot and matching)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Perplexity API Key (required for industry/location code matching)
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# LinkedIn/Unipile Configuration
# Get these from your Unipile account
LINKEDIN_ACCOUNT_ID=your-linkedin-account-id
UNIPILE_API_KEY=your-unipile-api-key
UNIPILE_DNS=api.unipile.com

# Microsoft Teams Bot Configuration
# Get these from Azure Portal when registering your Teams bot
TEAMS_APP_ID=your-teams-app-id
TEAMS_APP_PASSWORD=your-teams-app-password

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:5173

# Flask Environment
FLASK_ENV=development
